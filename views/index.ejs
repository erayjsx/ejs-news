<!DOCTYPE html>
<html lang="tr">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/header') %>

    <main class="max-w-screen-lg px-4 mx-auto w-full">
      <h2 class="mb-5 mt-8 font-semibold text-2xl">Top headlines</h2>
      <div class="space-y-4">
        <% articles.forEach(article => { %>

        <a
          href="<%= article.url %>"
          target="_blank"
          class="flex gap-3 bg-white p-4 transition drop-shadow-md hover:drop-shadow-xl rounded-2xl max-lg:h-36 h-40 row-reverse"
        >
          <img
            src="<%= article.urlToImage %>"
            alt="<%= article.title %>"
            class="max-lg:w-20 max-lg:h-28 h-32 w-48 object-cover max-lg:rounded-lg rounded-xl"
          />
          <div class="space-y-1">
            <p id="date" class="text-xs line-clamp-1">
              <%= article.publishedAt %>
            </p>
            <h3
              class="max-lg:text-base max-lg:line-clamp-2 line-clamp-3 text-xl font-semibold"
            >
              <%= article.title %>
            </h3>
            <p
              class="max-lg:text-sm max-lg:line-clamp-2 line-clamp-3 text-base opacity-70"
            >
              <%= article.description %>
            </p>
          </div>
        </a>

        <% }); %>
      </div>
    </main>

    <%- include('partials/footer') %>

    <script></script>
  </body>
</html>
